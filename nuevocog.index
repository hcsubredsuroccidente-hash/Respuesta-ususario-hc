                card.classList.remove('selected');
            });

            // Seleccionar nueva categor√≠a
            cardElement.classList.add('selected');
            selectedCategory = categoryKey;
            selectedSubtype = null;

            // Mostrar subtipos
            loadSubtypes(categoryKey);
        }

        // ============================================
        // CLAVE 4: CARGAR SUBTIPOS
        // ============================================
        function loadSubtypes(categoryKey) {
            const subtypesSection = document.getElementById('subtypesSection');
            const subtypesGrid = document.getElementById('subtypesGrid');
            
            subtypesSection.classList.remove('hidden');
            subtypesGrid.innerHTML = '';

            const subtypes = responseDatabase[categoryKey].subtypes;
            
            Object.keys(subtypes).forEach(subKey => {
                const btn = document.createElement('div');
                btn.className = 'subtype-btn';
                btn.setAttribute('data-subtype', subKey);
                
                // Usar nombres amigables
                const displayName = subtypeDisplayNames[subKey] || subKey;
                btn.textContent = displayName;
                btn.addEventListener('click', () => selectSubtype(subKey, btn));
                subtypesGrid.appendChild(btn);
            });
        }

        // Seleccionar subtipo
        function selectSubtype(subKey, btnElement) {
            document.querySelectorAll('.subtype-btn').forEach(btn => {
                btn.classList.remove('selected');
            });

            btnElement.classList.add('selected');
            selectedSubtype = subKey;
        }

        // ============================================
        // CLAVE 5: GENERAR RESPUESTA - L√ìGICA DE SUSTITUCI√ìN
        // ============================================
        function generateResponse() {
            if (!selectedCategory) {
                alert('Por favor selecciona un sistema de respuesta');
                return;
            }

            if (!selectedSubtype) {
                alert('Por favor selecciona el tipo de paciente');
                return;
            }

            // Aplicar formato de capitalizaci√≥n
            const rawNombre = document.getElementById('nombreApellido').value.trim();
            const formattedNombre = toTitleCase(rawNombre); 
            
            // Documento sin formato de capitalizaci√≥n
            const documento = document.getElementById('documento').value.trim();
            const extra = document.getElementById('fechaExtra').value.trim();

            if (!rawNombre || !documento) {
                alert('Por favor completa el nombre y documento del paciente');
                return;
            }

            let template = responseDatabase[selectedCategory].subtypes[selectedSubtype];
            
            // Manejar el campo extra (SUIT) primero
            let suitLine = '';
            if (extra) {
                suitLine = `SUIT ${extra} `;
            }
            
            // Obtener carpeta
            const carpeta = document.getElementById('numCarpeta').value.trim();

            // Reemplazar variables en la plantilla
            template = template.replace(/SUIT {{extra}} /g, suitLine);
            template = template.replace(/{{nombre}}/g, formattedNombre);
            template = template.replace(/{{documento}}/g, documento);
            template = template.replace(/{{carpeta}}/g, carpeta);
            
            // Para otros casos donde {{extra}} aparezca solo (sin SUIT)
            const extraContent = extra ? `<div style="margin-top: 15px;">${extra}</div>` : ''; 
            template = template.replace(/{{extra}}/g, extraContent);

            // Reemplazar saltos de l√≠nea manuales con <br> para mejorar la visualizaci√≥n y copia HTML
            // Esto es crucial para que el formato HTML se vea bien en el correo.
            template = template.replace(/\n/g, '<br>');


            // Usar innerHTML para interpretar las etiquetas de formato (negrita y azul)
            document.getElementById('resultContent').innerHTML = template;

            // Generar lista personalizada debajo - Usar el nombre formateado
            const items = [
                'historia cl√≠nica',
                '√≥rdenes m√©dicas',
                'registro enfermer√≠a',
                'triage',
                'adjuntos'
            ];
            let listaHTML = '';
            if (formattedNombre) {
                listaHTML = items.map(i => {
                    const fullText = formattedNombre + ' ' + i;
                    return `<div class="copy-item" ondblclick="copyItem(this)" title="Doble clic para copiar">${fullText}</div>`;
                }).join('');
            }
            document.getElementById('itemsList').innerHTML = listaHTML;
    // Guardar la respuesta en el historial
    addToHistory(template);
        }

        // Nueva funci√≥n para copiar √≠tems individuales
        function copyItem(element) {
            const text = element.textContent;
            
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(text).then(() => {
                    // Efecto visual de copiado
                    element.style.backgroundColor = '#10b981';
                    element.style.color = 'white';
                    setTimeout(() => {
                        element.style.backgroundColor = '';
                        element.style.color = '';
                    }, 500);
                }).catch(err => {
                    fallbackCopyItem(text);
                });
            } else {
                fallbackCopyItem(text);
            }
        }

        // Fallback para copiar √≠tem individual
        function fallbackCopyItem(text) {
            const area = document.createElement('textarea');
            area.value = text;
            document.body.appendChild(area);
            area.select();
            try {
                document.execCommand('copy');
                alert(`‚úì Copiado: ${text}`);
            } catch (err) {
                alert('Error al copiar');
            }
            document.body.removeChild(area);
        }

        // ============================================
        // CLAVE 6: COPIAR AL PORTAPAPELES (MODIFICADO para copiar HTML y TEXTO PLANO FORMATEADO)
        // ============================================
        function copyToClipboard() {
            const contentElement = document.getElementById('resultContent');
            
            if (contentElement.innerHTML.includes('Selecciona un sistema')) {
                alert('No hay contenido para copiar. Genera una respuesta primero.');
                return;
            }

            // 1. Obtener el contenido HTML con formato (SIN incluir la lista de √≠tems)
            let htmlContent = contentElement.innerHTML;

            // 2. Generar el texto plano de respaldo CON SALTOS DE L√çNEA
            // Reemplaza <br> y otras etiquetas de bloque con saltos de l√≠nea (\n)
            let plainText = htmlContent
                .replace(/<br\s*\/?>/gi, '\n') 
                // Reemplazar etiquetas de bloque con saltos de l√≠nea (usa 2 para simular p√°rrafos)
                .replace(/<div[^>]*>|<\/div>|<p>|<\/p>/gi, '\n\n') 
                // Reemplazar <strong> y <span> para que el texto aparezca limpio.
                .replace(/<strong[^>]*>|<\/strong>|<span[^>]*>|<\/span>/gi, '') 
                .replace(/\n\s*\n/g, '\n\n'); // Reemplazar m√∫ltiples saltos de l√≠nea por un par

            // Eliminar todas las dem√°s etiquetas HTML para obtener solo el texto final.
            const tempDiv = document.createElement('div');
            tempDiv.innerHTML = plainText; 
            plainText = tempDiv.textContent || tempDiv.innerText || "";
            
            // Limpiar saltos de l√≠nea al inicio o fin
            plainText = plainText.trim();
            
            // Verificar soporte de la API avanzada (ClipboardItem)
            if (typeof ClipboardItem !== 'undefined') {
                // Uso de ClipboardItem para copiar texto plano y HTML
                const htmlBlob = new Blob([htmlContent], { type: 'text/html' });
                const textBlob = new Blob([plainText], { type: 'text/plain' });

                const item = new ClipboardItem({
                    'text/html': htmlBlob,
                    'text/plain': textBlob
                });

                navigator.clipboard.write([item]).then(() => {
                    alert('¬°Respuesta con formato copiada al portapapeles! üéâ');
                }).catch(err => {
                    console.error('Error al copiar HTML:', err);
                    // Fallback
                    fallbackCopy(plainText); // Usar plainText aqu√≠
                });
            } else {
                // Fallback
                fallbackCopy(plainText); // Usar plainText aqu√≠
            }
        }

        // Funci√≥n de respaldo si ClipboardItem falla o no existe
        function fallbackCopy(textToCopy) {
            const area = document.createElement('textarea');
            area.value = textToCopy;
            document.body.appendChild(area);
            area.select();
            try {
                document.execCommand('copy');
                alert('¬°Respuesta copiada al portapapeles! (El formato plano deber√≠a ser correcto).');
            } catch (err) {
                alert('Error al intentar copiar al portapapeles.');
            }
            document.body.removeChild(area);
        }

        
// ========================
// HISTORIAL DE RESPUESTAS
// ========================
function addToHistory(content) {
    let history = JSON.parse(localStorage.getItem('responsesHistory')) || [];
    history.unshift(content);
    if (history.length > 10) history = history.slice(0, 10);
    localStorage.setItem('responsesHistory', JSON.stringify(history));
    renderHistory();
}

function renderHistory() {
    let history = JSON.parse(localStorage.getItem('responsesHistory')) || [];
    const historyList = document.getElementById('historyList');
    historyList.innerHTML = '';

    if (history.length === 0) {
        historyList.innerHTML = '<em>No hay respuestas guardadas todav√≠a</em>';
        return;
    }

    history.forEach((item, index) => {
        const div = document.createElement('div');
        div.innerHTML = `<div style="padding:8px;margin-bottom:5px;border:1px solid #ddd;border-radius:5px;cursor:pointer;background:white;">Respuesta #${index+1}</div>`;
        div.addEventListener('click', () => {
            document.getElementById('resultContent').innerHTML = item;
            alert('Respuesta cargada desde historial ‚úÖ');
        });
        historyList.appendChild(div);
    });
}

// Inicializar aplicaci√≥n
        document.addEventListener('DOMContentLoaded', () => {
    renderHistory();
            loadCategories();
        });
    </script>
